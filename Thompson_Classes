 # Every state has 0, 1 or 2 edges from it
    edges = []

    # Label for the arrows. None means epsilon
    label = None 

    def __init__(self, label=None, edges=[]):
        self.edges = edges
        self.label = label

class Fragment:
    # Start state of NFA fragment
    start = None
    # Accept state of NFA fragment
    accept = None

    # Constructor
    def __init__(self, start, accept):
        self.start = start
        self.accept = accept
